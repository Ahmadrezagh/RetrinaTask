# Retrina Framework Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Configuration
APP_NAME="Retrina Framework"
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0
APP_URL=http://localhost:8001

# Database Configuration
# Supported drivers: mysql, sqlite, postgres
DB_DRIVER=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=retrina_framework
DB_USERNAME=root
DB_PASSWORD=

# For SQLite (when DB_DRIVER=sqlite)
DB_SQLITE_PATH=storage/database.sqlite

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=storage/sessions
SESSION_DOMAIN=
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Cache Configuration
CACHE_DRIVER=file
CACHE_PATH=storage/cache

# Template Engine Configuration
TEMPLATE_CACHE_ENABLED=true
TEMPLATE_CACHE_PATH=storage/cache/views

# Security Configuration
CSRF_TOKEN_NAME=_token
CSRF_HEADER_NAME=X-CSRF-TOKEN

# Mail Configuration (for future use)
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@retrina.local
MAIL_FROM_NAME="Retrina Framework"

# Logging Configuration
LOG_LEVEL=debug
LOG_PATH=storage/logs

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=storage/uploads
